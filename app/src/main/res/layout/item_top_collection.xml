<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/graybg"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >
    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/collection_img"
        android:src="@drawable/collection_example"
        app:layout_constraintTop_toTopOf="@id/rank_number"
        app:layout_constraintStart_toEndOf="@id/rank_number"
        app:layout_constraintBottom_toBottomOf="@id/rank_number"
        android:scaleType="fitXY"
        android:layout_marginStart="25dp"
        />
    <TextView
        android:id="@+id/rank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="1"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/collection_title"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/collection_img"
        app:layout_constraintStart_toEndOf="@id/collection_img"
        android:text="Himalaya"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/collection_sales_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Sales"
        app:layout_constraintTop_toBottomOf="@id/collection_title"
        app:layout_constraintStart_toStartOf="@id/collection_title"
        android:textSize="13sp"
        />
    <TextView
        android:id="@+id/collection_sales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.51 ETH"
        app:layout_constraintStart_toEndOf="@id/collection_sales_text"
        app:layout_constraintTop_toTopOf="@id/collection_sales_text"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/collection_totalvolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.16"
        app:layout_constraintTop_toTopOf="@id/collection_img"
        app:layout_constraintEnd_toStartOf="@id/eth_volume"
        app:layout_constraintBottom_toBottomOf="@id/collection_img"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="2dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/eth_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ETH"
        app:layout_constraintTop_toTopOf="@id/collection_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/collection_img"
        android:textSize="13sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>
