<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.CollectionFragment"
    android:background="@color/white"
    android:id="@+id/scrollView">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/banner_img"
        android:layout_width="0dp"
        android:layout_height="230dp"
        android:src="@drawable/collection_example"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/arrow_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/arrow_back"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:elevation="10dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewFull"/>
    <View
        android:id="@+id/collection_img_view"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/drawable_radius"
        android:layout_marginTop="130dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/white"/>
    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearanceOverlay="@style/roundedImageViewFull"
        android:id="@+id/collection_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/collection_example"
        app:layout_constraintStart_toStartOf="@id/collection_img_view"
        app:layout_constraintTop_toTopOf="@id/collection_img_view"
        app:layout_constraintEnd_toEndOf="@id/collection_img_view"
        app:layout_constraintBottom_toBottomOf="@id/collection_img_view"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/collection_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Collection Name"
        app:layout_constraintStart_toStartOf="@id/collection_img_view"
        app:layout_constraintTop_toBottomOf="@id/collection_img_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:maxLines="2"
        />
    <ImageView
        android:id="@+id/icon_brow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/collection_description"
        app:layout_constraintStart_toStartOf="@id/collection_description"
        android:src="@drawable/browser"
        android:layout_marginTop="25dp"/>
    <ImageView
        android:id="@+id/icon_twitter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/icon_brow"
        app:layout_constraintStart_toEndOf="@id/icon_brow"
        android:layout_marginStart="30dp"
        android:src="@drawable/twitter"/>
    <ImageView
        android:id="@+id/icon_ig"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/icon_brow"
        app:layout_constraintStart_toEndOf="@id/icon_twitter"
        android:layout_marginStart="30dp"
        android:src="@drawable/instagram"/>
    <ImageView
        android:id="@+id/icon_discord"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/icon_brow"
        app:layout_constraintStart_toEndOf="@id/icon_ig"
        android:layout_marginStart="30dp"
        android:src="@drawable/discord"/>
    <TextView
        android:id="@+id/collection_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Collection Name dmsakdsm akdmsadks amdkasmd kasdmksadmakdmaskdmasdmksdmsakdmakdamdka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/collection_title"
        app:layout_constraintTop_toBottomOf="@id/collection_title"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:justificationMode="inter_word"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/collection_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/collection_volume_description"
        app:layout_constraintTop_toBottomOf="@id/icon_brow"
        app:layout_constraintEnd_toEndOf="@id/collection_volume_description"
        android:text="157"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/collection_volume_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/collection_description"
        app:layout_constraintTop_toBottomOf="@id/collection_volume"
        android:text="Total Volume"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="30dp" />
    <TextView
        android:id="@+id/collection_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/collection_owner_description"
        app:layout_constraintEnd_toEndOf="@id/collection_owner_description"
        app:layout_constraintTop_toBottomOf="@id/icon_brow"
        android:text="0"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/collection_owner_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/collection_volume_description"
        app:layout_constraintEnd_toEndOf="@id/collection_floor_description"
        app:layout_constraintTop_toBottomOf="@id/collection_owner"
        android:text="Owner"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/collection_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/collection_floor_description"
        app:layout_constraintTop_toBottomOf="@id/icon_brow"
        app:layout_constraintEnd_toEndOf="@id/collection_floor_description"
        android:text="157"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/collection_floor_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/collection_description"
        app:layout_constraintTop_toBottomOf="@id/collection_floor"
        android:text="Floor Price"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:textStyle="bold"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/collection_title_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items"
        app:layout_constraintStart_toStartOf="@id/collection_title"
        app:layout_constraintTop_toBottomOf="@id/collection_volume_description"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/graybg"
        android:id="@+id/rvnft"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/collection_title_items"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>